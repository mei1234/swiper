/* components/swiper/swiper.wxss */


/* 轮播 */

.relative {
    position: relative;
}

swiper {
    display: block;
    height: 100%;
}

.slide-image {
    width: 100%;
    /* height: 305rpx; */
}

.dots {
    position: absolute;
    bottom: 30rpx;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
}

.dot {
    display: inline-block;
    width: 15rpx;
    height: 7rpx;
    background-color: #cecece;
    margin-right: 16rpx;
    border-radius: 5rpx;
}

.active {
    width: 30rpx;
    background-color: #fff;
}